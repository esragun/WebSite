@model List<TrafficKurye.Models.ResimModel>
@{
    ViewBag.Title = "EgitimToplantısı";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<head>
    <link href="~/Content/css/lightbox.min.css" rel="stylesheet" />
</head>
<style>
    h2 {
        color: darkgreen;
    }

    .konum {
        float: left;
        margin: 25px;
    }
</style>

<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="yaziRenk">
                    Eğitim Toplantısı
                </h1>
                <p class="yaziRenk link-nav">@Html.ActionLink("Bizden Haberler", "BizdenHaberler", "Home", new { veri = ViewBag.IDi }, null)<span class="lnr lnr-arrow-right"></span>@Html.ActionLink("Eğitim Toplantısı", "EgitimToplantısı", "BizdenHaberler", new { veri = ViewBag.ID }, null)</p>
                @*<p class="text-white link-nav"><a href="Index">Anasayfa </a>  <span class="lnr lnr-arrow-right"></span>  <a href="BizdenHaberler">Bizden Haberler</a></p>*@
            </div>
        </div>
    </div>
</section>

<section class="feature-area section-gap">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12">

                <div class="single-feature ">
                    <a class="title d-flex flex-row"><h2>Eğitim Toplantısı</h2></a>
                    <hr />
                    <p style="font-size:medium;">
                        2012 yılı Nisan ayında, Kuşadası Fantasia Hotel’de, Türkiye’deki tüm acentaların katılımı ile eğitim toplantısı düzenlendi. Bu toplantıda “Traffic Mobile” programı ile ilgili eğitimler verildi. 3 gün süren bu toplantı Üstün Dökmen’in “İletişim- Başarı Sırları” semineri ile son buldu.
                    </p>
                    <br />

                </div>
            </div>

            <div class="col-lg-12 col-md-12 div">
                @{
                    foreach (var resim in Model)
                    {
                        <div class="col-lg-3 col-md-6 konum">
                            <a href="~/Content/HaberIcerikFotoları/EgitimToplantisi/@resim.ImgUrl" class="b-link-stripe b-animate-go  swipebox" rel="lightbox">
                                <div class="agile_work_grid w3_agileits_sub_work ">
                                    <img src="~/Content/HaberIcerikFotoları/EgitimToplantisi/@resim.ImgUrl" class="thumb img-thumbnail" style="width:100%;height:200px;" />
                                </div>
                            </a>

                        </div>

                    }
                }
            </div>

        </div>
    </div>
</section>
<script src="~/Content/js/lightbox-plus-jquery.min.js"></script>
