@model List<TrafficKurye.Models.ResimModel>
@{
    ViewBag.Title = "PostaHizmetCalistayi";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<head>
    <link href="~/Content/css/lightbox.min.css" rel="stylesheet" />
</head>
<style>
    h2 {
        color: darkgreen;
    }

    .konum {
        float: left;
        margin: 25px;
    }
</style>

<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="yaziRenk">
                    Posta Hizmetleri Çalıştayı
                </h1>
                <p class="yaziRenk link-nav">@Html.ActionLink("Bizden Haberler", "BizdenHaberler", "Home", new { veri = ViewBag.IDi }, null)<span class="lnr lnr-arrow-right"></span>@Html.ActionLink("Posta Hizmetleri Çalıştayı", "PostaHizmetCalistayi", "BizdenHaberler", new { veri = ViewBag.ID }, null)</p>
                @*<p class="text-white link-nav"><a href="Index">Anasayfa </a>  <span class="lnr lnr-arrow-right"></span>  <a href="BizdenHaberler">Bizden Haberler</a></p>*@
            </div>
        </div>
    </div>
</section>


<section class="feature-area section-gap">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12">
                <div class="single-feature ">
                    <a class="title d-flex flex-row"><h2>2017 Posta Hizmetleri Çalıştayı</h2></a>
                    <hr />
                    <p style="font-size:medium;">
                        Şirketimiz; Ulaştırma, Denizcilik ve Haberleşme Bakanlığı Haberleşme Genel Müdürlüğü tarafından organize edilen, KARİD (Türkiye Kargo, Kurye ve Lojistik İşletmecileri Derneği) ve PTT A.Ş. katkılarıyla 27-28 Ocak 2017 tarihinde ANTALYA’da gerçekleştirilen Posta Hizmetleri Çalıştayı’na katılmıştır. Çalıştayda, Haberleşme Genel Müdürü Sn.Ensar KILIÇ Bey’in Başkanlığında iki gün süreyle sektörün temsilcileri ile birlikte sektörün sorunları, çözüm önerileri ve sektörün geleceğe yönelik beklentileri değerlendirilmiştir.
                        
                    </p>
                    <br />

                </div>
            </div>

            <div class="col-lg-12 col-md-12 div">
                @{
                    foreach (var resim in Model)
                    {
                        <div class="col-lg-3 col-md-6 konum">
                            <a href="~/Content/HaberIcerikFotoları/PostaHizmetCalistayi/@resim.ImgUrl" class="b-link-stripe b-animate-go  swipebox" rel="lightbox">
                                <div class="agile_work_grid w3_agileits_sub_work ">
                                    <img src="~/Content/HaberIcerikFotoları/PostaHizmetCalistayi/@resim.ImgUrl" class="thumb img-thumbnail" style="width:100%;height:200px;" />
                                </div>
                            </a>

                        </div>

                    }
                }
            </div>

        </div>
    </div>
</section>

<script src="~/Content/js/lightbox-plus-jquery.min.js"></script>