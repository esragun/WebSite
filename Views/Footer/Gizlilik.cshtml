    h2 {
        color: darkgreen;
        border-bottom: 1px solid darkseagreen;
    }

    p {
        color:#458B74;
        margin:auto;
        font-size:medium;
    }
</style>

<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="yaziRenk">
                    Gizlilik
                </h1>
                <p class="yaziRenk link-nav text-center">@Html.ActionLink("Anasayfa", "Index", "Home", new { veri = ViewBag.IDi }, null)<span class="lnr lnr-arrow-right"></span>@Html.ActionLink("Gizlilik", "Gizlilik", "Footer", new { veri = ViewBag.ID }, null)</p>
