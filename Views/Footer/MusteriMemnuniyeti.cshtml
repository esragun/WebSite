
@{
    ViewBag.Title = "MusteriMemnuniyeti";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>
    h2 {
        color: darkgreen;
        border-bottom: 1px solid darkseagreen;
    }

    p {
        color:#458B74;
        margin:auto;
        font-size:medium;
    }
</style>

<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="yaziRenk">
                    Müşteri Memnuniyeti
                </h1>
                <p class="yaziRenk link-nav text-center">@Html.ActionLink("Anasayfa", "Index", "Home", new { veri = ViewBag.IDi }, null)<span class="lnr lnr-arrow-right"></span>@Html.ActionLink("Müşteri Memnuniyeti", "MusteriMemnuniyeti", "Footer", new { veri = ViewBag.ID }, null)</p>
                @*<p class="text-white link-nav"><a href="Index">Anasayfa </a>  <span class="lnr lnr-arrow-right"></span>  <a href="Hakkımızda"> Hakkımızda</a></p>*@
            </div>
        </div>
    </div>
</section>

<section class="feature-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 div">
                <div class="single-feature">
                    <div class="col-lg-12">
                            <h2>Müşteri Memnuniyeti  </h2>
                        <br />
                            <p>
                                Müşterilerimizin talep, şikayet ve önerilerini;
                            </p>
                            <p>
                                Kolaylıkla ulaştırabilecekleri erişim kanallarını sunmayı,
                            </p>
                            <p>
                                Mevzuat doğrultusunda hızlı ve tarafsız, şeffaf ve gizlilik esasına dayanarak ele almayı,
                            </p>
                            <p>
                                Müşteri odaklı bir yaklaşımla zamanında ücretsiz çözümler sunmayı,
                            </p>
                            <p>
                                Geri bildirimler doğrultusunda sürekli iyileştirmeyi taahhüt eder.
                            </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

