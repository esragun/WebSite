@model TrafficKurye.Models.Iletisim
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    .contact-page-area .form-area textarea {
        width:800px;
        height: 198px!important;
    }
    .contact-page-area .single-contact-address .lnr{
    color: #28a745!important;
    }
    h1, h2, h3, h4, h5,.contact-details{
    color: #28a745!important;
    }
    .input-group{
        margin-bottom:0px;
    }
</style>

<!-- start banner Area -->
<section class="banner-area" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 style="color:darkseagreen!important;">
                    İletişim
                </h1>
                <p class="yaziRenk link-nav">@Html.ActionLink("Anasayfa", "Index", "Home", new { veri = ViewBag.IDi }, null)<span class="lnr lnr-arrow-right"></span>@Html.ActionLink("İletişim", "Iletisim", "Home", new { veri = ViewBag.ID }, null)</p>
                @*<p class="text-white link-nav"><a href="Index">Anasayfa </a>  <span class="lnr lnr-arrow-right"></span>  <a href="Iletisim"> İletişim </a></p>*@
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            <div class="map-wrap col-lg-12 col-md-12">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3007.9550118043!2d28.995226951191263!3d41.06997602347275!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab65d876f767b%3A0xd6858c841a1506ed!2sTRAFF%C4%B0CKURYE!5e0!3m2!1sen!2str!4v1478322170989" width="100%" height="450" frameborder="0" style="border:0"></iframe>
            </div>
            <div class="col-lg-4 d-flex flex-column address-wrap">
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-home"></span>
                    </div>
                    <div class="contact-details">
                        <h5>34387 Mecidiyeköy, İstanbul</h5>
                        <p>Şehit Er Cihan Namlı Cad. Ak Sok. No:30/A </p>
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-phone-handset"></span>
                    </div>
                    <div class="contact-details">

                        <ul>
                            <li><h5>444 57 23</h5></li>
                            <li><h5>217-06-26</h5></li>
                            <li><h5>217-06-24 (fax)</h5></li>
                        </ul>

                        <p>Pzt - Cuma 9.00 - 18.00 Ctesi 9.00 - 13.00 Pzr KAPALI</p>
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-envelope"></span>
                    </div>
                    <div class="contact-details">
                        <h5>info@traffickurye.com</h5>
                        <p>Sorularınızı Gönderin!</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                @using (Html.BeginForm("Iletisim", "Home", FormMethod.Post, new { @class = "form-area contact-form text-right" }))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-6" style="float:left;margin-bottom:10px;">
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.Adsoyad, new { @class = "form-control", @placeholder = "İsminizi giriniz..", @required = "", @type = "text" })
                                    </div>

                                </div>
                                <div class="col-lg-6" style="float:right">
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "E-mail adresinizi giriniz..", @type = "email", @required = "" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12" style="margin-top:17px;">
                            <div class="row">
                                <div class="input-group col-lg-12">
                                    <h5>@Html.LabelFor(model => model.Mesaj, new { @class = "yaziRenk" })</h5>
                                </div>
                                <div class="input-group col-lg-12">
                                    @Html.EditorFor(model => model.Mesaj, new { @class = "form-control", @type = "text", @required = "", @style = "height:50%" })
                                </div>
                            </div>
                            <div class="d-flex justify-content-between" style="float:right;margin-top:10px;">
                                <input class="form-control btn-default" type="submit" value="Gönder" style="border-color:darkseagreen;color:darkgreen;font-size:medium;width:200px;height:50px;" />
                            </div>
                        </div>
                    </div>
                    
                    if (ViewBag.sonuc == "danger" || ViewBag.sonuc == "success")
                    {
                        <div class="alert alert-@ViewBag.Sonuc" style="color:black;">
                            @ViewBag.Mesaj
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

<!-- End contact-page Area -->

