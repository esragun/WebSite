@model List<TrafficKurye.Models.Haber>
@{
    ViewBag.Title = "BizdenHaberler";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>
    .thumb img-thumbnail {
        cursor: auto;
    }

    .section-gap.single-product {
        margin: 5px;
    }

    .row {
        margin-left: 0px;
        margin-right: 0px;
    }
</style>
<!-- start banner Area -->
<section class="banner-area" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="yaziRenk">
                    Bizden Haberler
                </h1>
                <p class="yaziRenk link-nav">@Html.ActionLink("Anasayfa", "Index", "Home", new { veri = ViewBag.IDi }, null)<span class="lnr lnr-arrow-right"></span>@Html.ActionLink("Bizden Haberler", "BizdenHaberler", "Home", new { veri = ViewBag.ID }, null)</p>
                @*<p class="text-white link-nav"><a href="Index">Anasayfa </a>  <span class="lnr lnr-arrow-right"></span>  <a href="BizdenHaberler">Bizden Haberler</a></p>*@
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start products Area -->
<section class="products-area product-page section-gap">
    <div class="container">
        <div class="row">
            @{
                foreach (var haber in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="single-product">
                            <div class="row">
                                <div class="thumb img-thumbnail col-lg-12 col-md-12">
                                    <img src="~/Content/img/BizdenHaberlerFoto/@haber.ImgUrl" style="width:100%;height:180px" />
                                </div>
                                <div class="details col-lg-12 col-md-12">
                                    <div class="row">
                                            <div class="col-lg-12 col-md-12">
                                                <h4>@haber.HaberBaslik</h4>
                                                <p>
                                                    @haber.Icerik
                                                </p>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <p class="primary-btn text-uppercase">@Html.ActionLink("Devamını Oku", @haber.ActionLinkAdi, @haber.ControllerAdi, new { veri = ViewBag.IDi }, null)</p>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }

        </div>
    </div>
</section>
<!-- End products Area -->
<!-- Start brand Area -->
<!-- End brand Area -->
